---
import ArtistImage from '../ArtistImage.astro';
import Button from '../Button.astro';
import Gallery from '../Gallery.astro';
import type { GalleryImage } from '../../utils/contentHelpers';
import type { ImageMetadata } from 'astro';

interface StyleLink {
  name: string;
  href: string;
}

interface Props {
  name: string;
  slug?: string;
  intro: string;
  instagram?: string;
  photo?: string | ImageMetadata;
  styles?: StyleLink[];
  galleryImages?: GalleryImage[];
  className?: string;
}

const {
  name,
  slug,
  intro,
  instagram,
  photo,
  styles = [],
  galleryImages = [],
  className = ""
} = Astro.props;
---

<section class={`artist-detail-section ${className}`}>
  <div class="container">
    <div class="artist-detail-layout">
      <!-- Left Column: Portrait + Info -->
      <div class="artist-info-column">
        <div class="artist-portrait">
          <ArtistImage image={photo} imageAlt={`${name} - Tattoo Artist`} />
        </div>
        
        <div class="artist-info">
          <h2 class="artist-name">{name}</h2>
          <p class="artist-intro">{intro}</p>
          
          {instagram && (
            <p class="artist-instagram">
              <strong>Instagram:</strong>{" "}
              <a href={`https://instagram.com/${instagram.replace('@', '')}`} target="_blank" rel="noopener noreferrer" class="instagram-link">@{instagram.replace('@', '')}</a>
            </p>
          )}
          
          {styles.length > 0 && (
            <p class="artist-styles">
              <strong>Styles the artist works in:</strong>{" "}
              <span set:html={styles.map((style, index) => 
                `<a href="${style.href}" class="artist-style-link">${style.name}</a>${index < styles.length - 1 ? ', ' : ''}`
              ).join('')} />
            </p>
          )}
          
          <div class="artist-actions">
            <Button 
              type="Primary" 
              color="Primary" 
              href={slug ? `/book?artist=${encodeURIComponent(slug)}` : '/book'} 
              leadingIcon={false} 
              trailingIcon={true}
              aria-label="Book a session"
            >
              Book A session
            </Button>
            {slug && (
              <Button 
                type="Secondary" 
                color="Primary" 
                href={`/artists/${slug}`}
                leadingIcon={false} 
                trailingIcon={true}
                aria-label={`More about ${name}`}
              >
                More about the artist
              </Button>
            )}
          </div>
        </div>
      </div>

      <!-- Right Column: Gallery -->
      {galleryImages.length > 0 && (
        <div class="artist-gallery-column">
          <Gallery images={galleryImages} maxVisible={6} />
        </div>
      )}

    </div>
  </div>
</section>

<style>
  .artist-detail-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--spacing-core-1100-md) 0;
  }

  .artist-detail-layout {
    display: flex;
    flex-direction: row;
    gap: var(--spacing-core-800-md);
    width: 100%;
    align-items: flex-start;
  }

  /* Left Column: Portrait + Info */
  .artist-info-column {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-core-800-md);
    flex: 0 0 50%;
    max-width: 640px;
    align-items: flex-start;
  }

  /* Right Column: Gallery */
  .artist-gallery-column {
    flex: 1;
    min-width: 0;
    max-width: 50%;
  }

  .artist-portrait {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
  }

  .artist-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-core-700-md);
    flex: 1;
    min-width: 288px;
    width: 100%;
    max-width: 100%;
  }

  .artist-name {
    font: var(--typography-h2);
    color: var(--color-primary-900);
    margin: 0;
  }

  .artist-intro {
    font: var(--typography-body-md);
    color: var(--color-primary-900);
    margin: 0;
    font-weight: var(--font-weight-light);
  }

  .artist-instagram {
    font: var(--typography-body-md);
    color: var(--color-primary-900);
    margin: 0;
  }

  .artist-instagram strong {
    font-weight: var(--font-weight-bold);
  }

  .instagram-link {
    color: var(--color-primary-900);
    text-decoration: underline;
    text-underline-position: from-font;
    font-weight: var(--font-weight-light);
  }

  .instagram-link:hover {
    color: var(--color-primary-700);
  }

  .artist-styles {
    font: var(--typography-body-md);
    color: var(--color-primary-900);
    margin: 0;
    line-height: var(--line-height-core-800-md);
  }

  .artist-styles strong {
    font-weight: var(--font-weight-bold);
  }

  .artist-style-link {
    color: var(--color-primary-900);
    text-decoration: underline;
    text-underline-position: from-font;
  }

  .artist-style-link:hover {
    color: var(--color-primary-700);
  }

  .artist-actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-core-800-md);
    padding-top: var(--spacing-core-900-md);
    width: fit-content;
    align-items: flex-start;
  }

  /* Tablet Layout */
  @media (min-width: 768px) and (max-width: 1023px) {
    .artist-detail-layout {
      flex-direction: column;
    }

    .artist-info-column {
      flex: 1 1 100%;
      max-width: 100%;
    }

    .artist-gallery-column {
      max-width: 100%;
      width: 100%;
    }
  }

  /* Mobile Layout */
  @media (max-width: 767px) {
    .artist-detail-section {
      padding: var(--spacing-core-900-md) 0;
    }

    .artist-detail-layout {
      flex-direction: column;
      gap: var(--spacing-core-900-md);
    }

    .artist-info-column {
      flex: 1 1 100%;
      max-width: 100%;
      flex-direction: row;
      flex-wrap: wrap;
      gap: var(--spacing-core-700-md);
    }

    .artist-gallery-column {
      max-width: 100%;
      width: 100%;
    }

    .artist-portrait {
      flex-shrink: 0;
    }

    .artist-info {
      flex: 1;
      min-width: 200px;
      gap: var(--spacing-core-700-md);
    }
  }
</style>
