---
// Note: We're using regular img tags instead of Astro's Image component
// because dynamic remote URLs from R2 require complex configuration.
// The images still benefit from lazy loading and browser caching.

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  aspectRatio?: number; // width / height
  sizes?: string; // e.g., "(max-width: 768px) 100vw, 50vw"
  loading?: 'lazy' | 'eager';
  className?: string;
  fallbackSrc?: string;
  quality?: number; // 1-100, default 80
}

const {
  src: rawSrc,
  alt,
  width,
  height,
  aspectRatio,
  sizes,
  loading = 'lazy',
  className = '',
  fallbackSrc,
  quality = 80,
} = Astro.props;

// Guard against undefined/empty src
const src = rawSrc || fallbackSrc || '';
const hasSrc = src && typeof src === 'string' && src.length > 0;

// Determine if this is a remote URL
const isRemote = hasSrc && (src.startsWith('http://') || src.startsWith('https://'));

// Calculate dimensions if aspectRatio is provided
let finalWidth = width;
let finalHeight = height;

if (aspectRatio && finalWidth && !finalHeight) {
  finalHeight = Math.round(finalWidth / aspectRatio);
} else if (aspectRatio && finalHeight && !finalWidth) {
  finalWidth = Math.round(finalHeight * aspectRatio);
}

// If no dimensions provided, use default thumbnail size for optimization
// This ensures images are optimized even when exact dimensions aren't specified
if (!finalWidth && !finalHeight) {
  finalWidth = 800; // Default thumbnail width
  if (aspectRatio) {
    finalHeight = Math.round(finalWidth / aspectRatio);
  } else {
    finalHeight = 800; // Default square if no aspect ratio
  }
}

---

{!hasSrc ? (
  // No valid src, render nothing or placeholder
  fallbackSrc ? (
    <img
      src={fallbackSrc}
      alt={alt}
      width={finalWidth}
      height={finalHeight}
      loading={loading}
      class={className}
    />
  ) : null
) : isRemote ? (
  // For remote images, use regular img tag to avoid Astro Image issues with dynamic URLs
  // The images are served from R2 with proper caching
  <img
    src={src}
    alt={alt}
    width={finalWidth}
    height={finalHeight}
    loading={loading}
    class={className}
    onerror={fallbackSrc ? `this.src='${fallbackSrc}'; this.onerror=null;` : undefined}
  />
) : (
  // For local images that aren't imported, use regular img tag
  <img
    src={src}
    alt={alt}
    width={finalWidth}
    height={finalHeight}
    loading={loading}
    class={className}
    onerror={fallbackSrc ? `this.src='${fallbackSrc}'; this.onerror=null;` : undefined}
  />
)}

<style>
  :global(.optimized-image) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }
</style>
