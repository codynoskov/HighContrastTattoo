---
import Button from '../Button.astro';
import Gallery from '../Gallery.astro';
import type { GalleryImage } from '../../utils/contentHelpers';

interface Props {
  name: string;
  intro: string;
  exploreHref?: string;
  galleryImages?: GalleryImage[];
  className?: string;
}

const {
  name,
  intro,
  exploreHref = `/styles/${name.toLowerCase().replace(/\s+/g, '-').replace(/&/g, 'and')}`,
  galleryImages = [],
  className = ""
} = Astro.props;
---

<section class={`style-detail-section ${className}`}>
  <div class="container">
    <div class="style-detail-layout">
      <!-- Text Content -->
      <div class="style-content-column">
        <div class="style-text-block">
          <h2 class="style-name">{name}</h2>
          <p class="style-intro">{intro}</p>
        </div>
        
        <div class="style-actions">
          <Button 
            type="Primary" 
            color="Primary" 
            href="/book" 
            leadingIcon={false} 
            trailingIcon={true}
            aria-label="Book a session"
          >
            Book A session
          </Button>
          <Button
            type="Secondary"
            color="Primary"
            href={exploreHref}
            leadingIcon={false}
            trailingIcon={true}
            aria-label={`Explore ${name} style`}
          >
            Explore the style
          </Button>
        </div>
      </div>

      <!-- Right Column: Gallery -->
      {galleryImages.length > 0 && (
        <div class="style-gallery-column">
          <Gallery images={galleryImages} maxVisible={6} />
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .style-detail-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--spacing-core-1100-md) 0;
    overflow: hidden;
  }

  .style-detail-layout {
    display: flex;
    flex-direction: row;
    gap: var(--spacing-core-800-md);
    width: 100%;
    align-items: flex-start;
  }

  /* Left Column: Text Content */
  .style-content-column {
    display: flex;
    flex-direction: column;
    flex: 0 0 50%;
    min-width: 288px;
    max-width: 640px;
  }

  /* Right Column: Gallery */
  .style-gallery-column {
    flex: 1;
    min-width: 0;
    max-width: 50%;
  }

  .style-text-block {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-core-700-md);
    width: 100%;
  }

  .style-name {
    font: var(--typography-h2);
    color: var(--color-primary-900);
    margin: 0;
  }

  .style-intro {
    font: var(--typography-body-md);
    color: var(--color-primary-900);
    margin: 0;
    font-weight: var(--font-weight-light);
    line-height: var(--line-height-core-800-md);
  }

  .style-actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-core-800-md);
    align-items: flex-start;
    padding-top: var(--spacing-core-900-md);
    width: fit-content;
  }

  /* Tablet Layout */
  @media (min-width: 768px) and (max-width: 1023px) {
    .style-detail-layout {
      flex-direction: column;
      gap: var(--spacing-core-800-md);
    }

    .style-content-column {
      flex: 1 1 100%;
      max-width: 100%;
      min-width: 280px;
    }

    .style-gallery-column {
      max-width: 100%;
      width: 100%;
    }

    .style-name {
      font: var(--typography-h3);
    }
  }

  /* Mobile Layout */
  @media (max-width: 767px) {
    .style-detail-section {
      padding: var(--spacing-core-900-md) 0;
    }

    .style-detail-layout {
      flex-direction: column;
      gap: var(--spacing-core-900-md);
    }

    .style-content-column {
      flex: 1 1 100%;
      max-width: 100%;
      min-width: 0;
      width: 100%;
    }

    .style-gallery-column {
      max-width: 100%;
      width: 100%;
    }

    .style-name {
      font: var(--typography-h2);
    }

    .style-intro {
      font: var(--typography-body-md);
    }

    .style-actions {
      width: fit-content;
      padding-top: var(--spacing-core-900-md);
    }
  }
</style>
