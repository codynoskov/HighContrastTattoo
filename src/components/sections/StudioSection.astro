    color?: "Primary" | "Accent" | "Neutral";
  }>;
}

interface Props {
  title?: string;
  description?: string;
  images?: GalleryImage[];
  maxVisible?: number;
  className?: string;
}

const studioImages: GalleryImage[] = [
  { src: "/images/studio/001A5548-Edit.jpg", alt: "Studio workspace" },
