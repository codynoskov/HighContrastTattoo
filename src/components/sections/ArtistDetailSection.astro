---
import ArtistImage from '../ArtistImage.astro';

interface Props {
  name: string;
  slug?: string;
  intro: string;
  photo?: string;
  styles?: string[];
  className?: string;
}

const {
  name,
  slug,
  intro,
  photo,
  styles = [],
  className = ""
} = Astro.props;
---

<section class={`artist-detail-section ${className}`}>
  <div class="container">
    <div class="artist-detail-layout">
      <!-- Left Column: Portrait + Info -->
      <div class="artist-info-column">
        <div class="artist-portrait">
          <ArtistImage image={photo} imageAlt={`${name} - Tattoo Artist`} />
        </div>
        
        <div class="artist-info">
          <h2 class="artist-name">{name}</h2>
          <p class="artist-intro">{intro}</p>
          
          {styles.length > 0 && (
            <p class="artist-styles">
              <strong>Styles the artist works in:</strong>{" "}
              <span set:html={styles.map((style, index) => 
                `<a href="/styles#${style.toLowerCase().replace(/\s+/g, '-').replace(/&/g, 'and')}" class="artist-style-link">${style}</a>${index < styles.length - 1 ? ', ' : ''}`
              ).join('')} />
            </p>
          )}
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  .artist-detail-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--spacing-core-1100-md) 0;
  }

  .artist-detail-layout {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-core-900-md);
    width: 100%;
  }

  /* Left Column: Portrait + Info */
  .artist-info-column {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-core-800-md);
    width: 100%;
    align-items: flex-start;
  }

  .artist-portrait {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
  }

  .artist-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-core-700-md);
    flex: 1;
    min-width: 288px;
    width: 100%;
  }

  .artist-name {
    font: var(--typography-h2);
    color: var(--color-primary-900);
    margin: 0;
  }

  .artist-intro {
    font: var(--typography-body-md);
    color: var(--color-primary-900);
    margin: 0;
    font-weight: var(--font-weight-light);
  }

  .artist-styles {
    font: var(--typography-body-md);
    color: var(--color-primary-900);
    margin: 0;
    line-height: var(--line-height-core-800-md);
  }

  .artist-styles strong {
    font-weight: var(--font-weight-bold);
  }

  .artist-style-link {
    color: var(--color-primary-900);
    text-decoration: underline;
    text-underline-position: from-font;
  }

  .artist-style-link:hover {
    color: var(--color-primary-700);
  }

  /* Tablet Layout */
  @media (min-width: 768px) and (max-width: 1023px) {
    .artist-info-column {
      max-width: none;
    }

    .artist-name {
      font: var(--typography-h3);
    }
  }

  /* Mobile Layout */
  @media (max-width: 767px) {
    .artist-detail-section {
      padding: var(--spacing-core-900-md) 0;
    }

    .artist-detail-layout {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-core-800-md);
    }

    .artist-info-column {
      max-width: none;
      flex-direction: row;
      flex-wrap: wrap;
      gap: var(--spacing-core-700-md);
    }

    .artist-portrait {
      flex-shrink: 0;
    }

    .artist-info {
      flex: 1;
      min-width: 200px;
      gap: var(--spacing-core-700-md);
    }

    .artist-name {
      font: var(--typography-h3);
    }

    .artist-intro {
      font: var(--typography-body-md);
    }
  }
</style>
