---
import Button from '../Button.astro';

interface Props {
  name: string;
  intro: string;
  exploreHref?: string;
  className?: string;
}

const {
  name,
  intro,
  exploreHref = `/styles/${name.toLowerCase().replace(/\s+/g, '-').replace(/&/g, 'and')}`,
  className = ""
} = Astro.props;
---

<section class={`style-detail-section ${className}`}>
  <div class="container">
    <div class="style-detail-layout">
      <!-- Text Content -->
      <div class="style-content-column">
        <div class="style-text-block">
          <h2 class="style-name">{name}</h2>
          <p class="style-intro">{intro}</p>
        </div>
        
        <div class="style-actions">
          <Button
            type="Secondary"
            color="Primary"
            href={exploreHref}
            leadingIcon={false}
            trailingIcon={true}
            className="style-explore-link"
          >
            Explore the style
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .style-detail-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--spacing-core-1100-md) 0;
    overflow: hidden;
  }

  .style-detail-layout {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-core-900-md);
    width: 100%;
    align-items: flex-start;
  }

  /* Left Column: Text Content */
  .style-content-column {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-width: 288px;
    max-width: 640px;
  }

  .style-text-block {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-core-700-md);
    width: 100%;
  }

  .style-name {
    font: var(--typography-h2);
    color: var(--color-primary-900);
    margin: 0;
  }

  .style-intro {
    font: var(--typography-body-md);
    color: var(--color-primary-900);
    margin: 0;
    font-weight: var(--font-weight-light);
    line-height: var(--line-height-core-800-md);
  }

  .style-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-core-800-md);
    align-items: center;
    padding-top: var(--spacing-core-900-md);
    width: 100%;
  }

  .style-explore-link {
    height: var(--spacing-core-1000-sm);
    padding: var(--spacing-core-600-md) 0;
  }

  /* Tablet Layout */
  @media (min-width: 768px) and (max-width: 1023px) {
    .style-detail-layout {
      gap: var(--spacing-core-800-md);
    }

    .style-content-column {
      max-width: none;
      min-width: 280px;
    }

    .style-name {
      font: var(--typography-h3);
    }
  }

  /* Mobile Layout */
  @media (max-width: 767px) {
    .style-detail-section {
      padding: var(--spacing-core-1100-md) 0;
    }

    .style-detail-layout {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-core-900-md);
    }

    .style-content-column {
      max-width: none;
      min-width: 0;
      width: 100%;
    }

    .style-name {
      font: var(--typography-h2);
    }

    .style-intro {
      font: var(--typography-body-md);
    }

    .style-actions {
      width: 100%;
      padding-top: var(--spacing-core-900-md);
    }
  }
</style>
