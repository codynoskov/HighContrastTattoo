---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Divider from '../../components/Divider.astro';
import ArtistPageHeroSection from '../../components/sections/ArtistPageHeroSection.astro';
import ArtistContentSection from '../../components/sections/ArtistContentSection.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const artists = await getCollection('artists');
  return artists.map((artist) => ({
    params: { slug: artist.slug },
    props: { artist }
  }));
}

interface Props {
  artist: CollectionEntry<'artists'>;
}

const { artist } = Astro.props;
const artistData = artist.data;
---

<Layout>
  <Header />
  <main>
    <ArtistPageHeroSection
      name={artistData.name}
      bio={artistData.bio}
      fullBio={artistData.fullBio}
      image={artistData.image}
      instagram={artistData.instagram}
      tags={artistData.tags}
      bookingHref={artistData.bookingHref}
    />
    
    <ArtistContentSection
      galleryImages={artistData.galleryImages}
      contentBlocks={artistData.contentBlocks}
      showBackLink={true}
    />
    
    <Divider color="light" />
  </main>
  <Footer />
</Layout>

<style>
  main {
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-x: visible;
    overflow-y: visible;
    padding-top: 72px; /* Account for fixed header height */
  }
</style>
