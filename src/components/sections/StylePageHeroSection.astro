---
import Logo from '../Logo.astro';

interface Props {
  name: string;
  intro: string;
  className?: string;
}

const {
  name,
  intro,
  className = ""
} = Astro.props;
---

<section class={`style-page-hero ${className}`} data-top-section>
  <div class="container">
    <!-- Logo positioned at container level, at left edge of container -->
    <div class="logo-background">
      <Logo width={192} height={418} class="background-logo" />
    </div>
    <div class="hero-layout">
      <!-- Style Info (no portrait image like Artist page) -->
      <div class="style-info">
        <h1 class="style-name">{name}</h1>
        <p class="style-intro">{intro}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .style-page-hero {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--color-primary-50);
    padding: var(--spacing-core-1100-md) 0 var(--spacing-core-1300-lg) 0;
    position: relative;
    overflow: hidden;
  }

  .style-page-hero .container {
    max-width: var(--spacing-core-1900-md); /* 1440px - same as global container */
    padding: 0 var(--spacing-core-800-md);
    width: 100%;
    position: relative;
  }

  .hero-layout {
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: start;
  }

  /* Logo positioned at container level, at left edge of container */
  .logo-background {
    position: absolute;
    left: 0;
    top: calc(-1 * var(--spacing-core-1100-md)); /* Offset to align with section top */
    pointer-events: none;
    z-index: 0;
    color: var(--color-primary-200);
    transform: scaleY(-1);
  }

  .logo-background :global(.background-logo) {
    display: block;
  }

  /* Style Info */
  .style-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-core-700-md);
    max-width: 640px;
    position: relative;
    z-index: 1;
  }

  .style-name {
    font: var(--typography-h1);
    color: var(--color-primary-900);
    margin: 0;
  }

  .style-intro {
    font: var(--typography-body-lg);
    color: var(--color-primary-900);
    margin: 0;
    font-weight: var(--font-weight-light);
    max-width: 640px;
  }

  /* Tablet Layout */
  @media (min-width: 768px) and (max-width: 1023px) {
    .style-name {
      font: var(--typography-h2);
    }
  }

  /* Mobile Layout */
  @media (max-width: 767px) {
    .style-page-hero {
      padding: var(--spacing-core-1100-md) 0 var(--spacing-core-1300-lg) 0;
    }

    .style-page-hero .container {
      padding: 0 var(--spacing-core-800-md);
    }

    .style-info {
      width: 100%;
    }

    /* Logo stays at container level, same position */
    .logo-background {
      left: 0;
      top: calc(-1 * var(--spacing-core-1100-md));
    }

    .style-name {
      font: var(--typography-h1);
      width: 100%;
    }

    .style-intro {
      font: var(--typography-body-lg);
      width: 100%;
    }
  }
</style>
