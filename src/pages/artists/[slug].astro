---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Divider from '../../components/Divider.astro';
import ArtistPageHeroSection from '../../components/sections/ArtistPageHeroSection.astro';
import ArtistContentSection from '../../components/sections/ArtistContentSection.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { getSlug, resolveStyles, worksToGalleryImages } from '../../utils/contentHelpers';

export async function getStaticPaths() {
  const artists = await getCollection('artists');
  const styles = await getCollection('styles');
  
  return artists.map((artist) => ({
    params: { slug: getSlug(artist) },
    props: { artist, styles }
  }));
}

interface Props {
  artist: CollectionEntry<'artists'>;
  styles: CollectionEntry<'styles'>[];
}

const { artist, styles } = Astro.props;
const artistData = artist.data;

// Compute derived data
const resolvedStyles = resolveStyles(artistData.styles, styles);
const galleryImages = worksToGalleryImages(artistData.works, artistData.name, styles);
---

<Layout>
  <Header />
  <main>
    <ArtistPageHeroSection
      name={artistData.name}
      intro={artistData.intro}
      photo={artistData.photo}
      styles={resolvedStyles}
    />
    
    <ArtistContentSection
      galleryImages={galleryImages}
      details={artistData.details}
      showBackLink={true}
    />
    
    <Divider color="light" />
  </main>
  <Footer />
</Layout>

<style>
  main {
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-x: visible;
    overflow-y: visible;
    padding-top: 72px; /* Account for fixed header height */
  }
</style>
