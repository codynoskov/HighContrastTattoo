---
import ArtistImage from '../ArtistImage.astro';
import Logo from '../Logo.astro';
import Button from '../Button.astro';
import type { ImageMetadata } from 'astro';

interface StyleLink {
  name: string;
  href: string;
}

interface Props {
  name: string;
  intro: string;
  instagram?: string;
  photo?: string | ImageMetadata;
  styles?: StyleLink[];
  className?: string;
}

const {
  name,
  intro,
  instagram,
  photo,
  styles = [],
  className = ""
} = Astro.props;
---

<section class={`artist-page-hero ${className}`} data-top-section>
  <div class="container">
    <!-- Logo positioned at container level, at left edge of container -->
    <div class="logo-background">
      <Logo width={192} height={418} class="background-logo" />
    </div>
    <div class="hero-layout">
      <!-- Left Column: Artist Info -->
      <div class="artist-info">
        <div class="artist-text">
          <h1 class="artist-name">{name}</h1>
          <p class="artist-intro">{intro}</p>
          
          {instagram && (
            <p class="artist-instagram">
              <strong>Instagram:</strong>{" "}
              <a href={`https://instagram.com/${instagram.replace('@', '')}`} target="_blank" rel="noopener noreferrer" class="instagram-link">@{instagram.replace('@', '')}</a>
            </p>
          )}
          
          {styles.length > 0 && (
            <p class="artist-styles">
              <strong>Styles the artist works in:</strong>{" "}
              <span set:html={styles.map((style, index) => 
                `<a href="${style.href}" class="artist-style-link">${style.name}</a>${index < styles.length - 1 ? ', ' : ''}`
              ).join('')} />
            </p>
          )}
        </div>

        <div class="hero-actions">
          <Button
            type="Primary"
            color="Primary"
            href="/book"
            leadingIcon={false}
            trailingIcon={true}
            trailingIconName="chevron-right"
          >
            Book A session
          </Button>
        </div>
      </div>

      <!-- Right Column: Artist Photo -->
      <div class="artist-portrait">
        <ArtistImage image={photo} imageAlt={`${name} - Tattoo Artist at High Contrast Tattoo`} className="hero-artist-image" />
      </div>
    </div>
  </div>
</section>

<style>
  .artist-page-hero {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--color-primary-50);
    padding: var(--spacing-core-1100-md) 0 var(--spacing-core-1300-lg) 0;
    position: relative;
    overflow: hidden;
  }

  .artist-page-hero .container {
    max-width: var(--spacing-core-1900-md); /* 1440px - same as global container */
    padding: 0 var(--spacing-core-800-md);
    width: 100%;
    position: relative;
  }

  .hero-layout {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--spacing-core-900-md);
    width: 100%;
    align-items: start;
  }

  /* Logo positioned at container level, at left edge of container */
  .logo-background {
    position: absolute;
    left: 0;
    top: calc(-1 * var(--spacing-core-1100-md)); /* Offset to align with section top */
    pointer-events: none;
    z-index: 0;
    color: var(--color-primary-200);
    transform: scaleY(-1);
  }

  .logo-background :global(.background-logo) {
    display: block;
  }

  /* Left Column: Artist Info */
  .artist-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-core-700-md);
    max-width: 640px;
    position: relative;
    z-index: 1;
  }

  .artist-text {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-core-700-md);
    width: 100%;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-core-800-md);
    align-items: flex-start;
    padding-top: var(--spacing-core-900-md);
    width: 100%;
  }

  .artist-name {
    font: var(--typography-h1);
    color: var(--color-primary-900);
    margin: 0;
  }

  .artist-intro {
    font: var(--typography-body-lg);
    color: var(--color-primary-900);
    margin: 0;
    font-weight: var(--font-weight-light);
    max-width: 640px;
  }

  .artist-instagram {
    font: var(--typography-body-md);
    color: var(--color-primary-900);
    margin: 0;
  }

  .artist-instagram strong {
    font-weight: var(--font-weight-bold);
  }

  .instagram-link {
    color: var(--color-primary-900);
    text-decoration: underline;
    text-underline-position: from-font;
    font-weight: var(--font-weight-light);
  }

  .instagram-link:hover {
    color: var(--color-primary-700);
  }

  .artist-styles {
    font: var(--typography-body-md);
    color: var(--color-primary-900);
    margin: 0;
    line-height: var(--line-height-core-800-md);
  }

  .artist-styles strong {
    font-weight: var(--font-weight-bold);
  }

  .artist-style-link {
    color: var(--color-primary-900);
    text-decoration: underline;
    text-underline-position: from-font;
  }

  .artist-style-link:hover {
    color: var(--color-primary-700);
  }

  /* Right Column: Portrait */
  .artist-portrait {
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    position: relative;
    z-index: 1;
  }

  /* Artist image sizing from Figma: 216px × 324px (desktop) */
  .artist-portrait :global(.hero-artist-image) {
    height: 324px;
    width: 216px;
  }

  /* Tablet Layout */
  @media (min-width: 768px) and (max-width: 1023px) {
    .hero-layout {
      gap: var(--spacing-core-800-md);
    }

    .artist-portrait :global(.hero-artist-image) {
      height: var(--spacing-core-1500-lg);
      width: calc(var(--spacing-core-1500-lg) * 2 / 3);
    }
  }

  /* Mobile Layout */
  @media (max-width: 767px) {
    .artist-page-hero {
      padding: var(--spacing-core-1100-md) 0 var(--spacing-core-1300-lg) 0;
    }

    .artist-page-hero .container {
      padding: 0 var(--spacing-core-800-md);
    }

    .hero-layout {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-core-800-md);
      align-items: flex-end; /* Right-align content for mobile */
    }

    .artist-portrait {
      justify-content: flex-end; /* Right-align image */
      width: 100%;
      order: 1;
    }

    /* Mobile image sizing from Figma: 168px × 252px */
    .artist-portrait :global(.hero-artist-image) {
      width: 168px;
      height: 252px;
    }

    .artist-info {
      width: 100%;
      order: 2;
      align-items: flex-start; /* Keep text left-aligned */
    }

    /* Logo stays at container level, same position */
    .logo-background {
      left: 0;
      top: calc(-1 * var(--spacing-core-1100-md));
    }
  }
</style>
