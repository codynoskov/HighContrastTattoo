---
// Artists listing page with gallery integration
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Divider from '../components/Divider.astro';
import ArtistsHeroSection from '../components/sections/ArtistsHeroSection.astro';
import ArtistDetailSection from '../components/sections/ArtistDetailSection.astro';
import { getCollection } from 'astro:content';
import { getSlug, getWorksByArtist, worksToGalleryImages, resolveStyleNames } from '../utils/contentHelpers';

const artistEntries = await getCollection('artists');
const worksEntries = await getCollection('works');
const stylesEntries = await getCollection('styles');

const artists = artistEntries.map(entry => {
  const artistSlug = getSlug(entry);
  const artistWorks = getWorksByArtist(artistSlug, worksEntries);
  const galleryImages = worksToGalleryImages(artistWorks, {
    context: 'artist',
    styles: stylesEntries,
  });
  
  // Get unique style slugs from all works and resolve to names
  const allStyleSlugs = [...new Set(artistWorks.flatMap(w => w.data.styles))];
  const styleNames = resolveStyleNames(allStyleSlugs, stylesEntries);
  
  return {
    name: entry.data.name,
    slug: artistSlug,
    intro: entry.data.intro,
    photo: entry.data.photo,
    styles: styleNames,
    galleryImages,
  };
});
---

<Layout>
  <Header />
  <main>
    <ArtistsHeroSection />
    
    <Divider color="light" />
    
    {artists.map((artist, index) => (
      <>
        <ArtistDetailSection
          name={artist.name}
          slug={artist.slug}
          intro={artist.intro}
          photo={artist.photo}
          styles={artist.styles}
          galleryImages={artist.galleryImages}
        />
        {index < artists.length - 1 && <Divider color="light" />}
      </>
    ))}
    
    <Divider color="light" />
  </main>
  <Footer />
</Layout>

<style>
  main {
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-x: visible;
    overflow-y: visible;
    padding-top: 72px; /* Account for fixed header height */
  }
</style>
